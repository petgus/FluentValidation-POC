@inherits LayoutComponentBase
<MudThemeProvider Theme="CustomMudBlazorTheme" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudMenu Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit">
            <MudMenuItem Link="/">Article validation</MudMenuItem>
            <MudMenuItem Link="/user">User validation</MudMenuItem>
        </MudMenu>
        <MudText Typo="Typo.h5" Class="ml-3">Fluent Validation P.O.C.</MudText>
    </MudAppBar>
    <MudMainContent>
        <MudContainer Class="mt-16" MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{

    //https://mudblazor.com/customization/theming/overview
    MudTheme CustomMudBlazorTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "#2657a0",
            Background = "#bababa",
            AppbarBackground = "#2657a0"
        },
    };
}
