@inherits LayoutComponentBase
<MudThemeProvider Theme="CustomMudBlazorTheme" />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Fluent Validation P.O.C.</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />
    </MudAppBar>
    <MudMainContent Class="d-flex align-center justify-center mud-full-width" Style="padding-top:200px;">
        @Body
    </MudMainContent>
</MudLayout>

@code{

    //https://mudblazor.com/customization/theming/overview
    MudTheme CustomMudBlazorTheme = new MudTheme()
    {
        Palette = new Palette()
        {
            Primary = "#2657a0",
            Background = "#bababa",
            AppbarBackground = "#2657a0"
        },
    };
}
